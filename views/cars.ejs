<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Car Sell App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <nav class="navbar navbar-dark bg-primary sticky-top">
      <!-- Navbar content -->
      <div class="container-fluid">
        
        <% if (data.user.Profile) { %>
     
          <% }else{ %>
            <a class="navbar-brand" href="/profileForm"><strong>Tambahkan Profile</strong></a>
 
          <%} %>
        <a class="navbar-brand" href="/logout"><strong>Log Out</strong></a>
        <a class="navbar-brand" href="/"><strong>Car Sell App</strong></a>
      </div>
      
    </nav>

 


    <div class="container-fluid">
      <h1 class="text-center">Cars Page</h1>
      <form action="/cars" method="get">
        <input type="text" name="search">
        <input type="submit" value="Search">
      </form><br>
    </div>

    <div class="container-fluid row row-cols-1 row-cols-md-5 g-4">
        <% data.car.forEach((el) => { %>
        <div class="col">
            <p><strong>Posted on: <%= formatDate(el.createdAt) %></strong></p>
            <div class="card" style="width: 18rem;">
                <img src="<%= el.photo1 %>" class="card-img-top" alt="img-car">
                <div class="card-body">
                    <h5 class="card-title"><%= el.name%></h5>
                    <p class="card-text"><%= el.formatRupiah() %></p>
                    <p class="card-text"><%= el.description %></p>
                    <a href="/cars/detail/<%= el.id %>" class="btn btn-primary">Go somewhere</a>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
  </body>
</html>